{% extends 'base.html.twig' %}

{% block title %}Familles de familles{% endblock %}
{% block montitre %}Affichage de des familles {% endblock %}


{% block body %}
{% for famille in familles %}

<div class="row align-items">
    
    <div class="col-6 text-center">
        <h2 class="border-bottom border-primary"><a href="{{path('affiche_famille',{'id':famille.id})}}">{{famille.libele|capitalize}}</a></h2> 
    </div>
    <div class="col">
        {% for animal in famille.animaux %}
        <div class="align-items-center">
            <div class="col-2 text-center">
                <img src="{{asset('images/'~ animal.image)}}" class="img-fluid">
        
            </div>
            <div class="col-2">
                <h2><a href="{{path('afficher_animal',{'id':animal.id})}}">{{animal.nom}}</a></a></h2> 
               
            </div>
            <div class="col-2">
                <h2 >{{animal.description}}
                </h2>
            </div>
        
        </div>
        {% endfor %}
    </div> 
    <div class="col-6">
        <h2>{{famille.description}}</a></h2>

    </div>
</div>
{% endfor %}

{% endblock %}
